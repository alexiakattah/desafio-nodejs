// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  projects Project[]

  @@map("users")
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String
  createdAt   DateTime @default(now())
  members     User[]
  tasks       Task[]

  @@map("projects")
}

model Task {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(255)
  description String
  createdAt   DateTime @default(now())
  status      Status
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  tags        Tag[]

  @@map("tasks")
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
}

model Tag {
  id     String @id @default(uuid())
  title  String
  taskId String
  task   Task   @relation(fields: [taskId], references: [id])

  @@map("tags")
}
